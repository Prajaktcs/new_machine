// Defaults listed here - https://github.com/neoclide/coc-python
{
    "python.autoComplete.addBrackets": true,
    "python.jediEnabled": true,
    "python.jediPath": "/usr/local/lib/python3.7/site-packages",
    "python.linting.enabled": true,
    "python.linting.pylintUseMinimalCheckers": false,
    "python.linting.pylintPath": "pylint",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/usr/local/bin/black",
    "python.jediMemoryLimit": -1,
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": ["--ignore-missing-imports","--follow-imports=silent","--show-column-numbers", "--python-version=3.7"],
    "python.linting.pylintEnabled": true,
    "python.venvFolders": ["env",".pyenv",".direnv"],
    "python.workspaceSymbols.rebuildOnFileSave": true,
    "python.workspaceSymbols.tagFilePath": "${workspaceFolder}/tags",
    "coc.preferences.formatOnSaveFiletypes": ["*.py"],
    "languageserver": {
      "terraform": {
        "command": "terraform-lsp",
        "filetypes": ["terraform"],
        "initializationOptions": {}
      },
      "sql": {
      "command": "sql-language-server",
      "args" : ["up", "--method", "stdio"],
      "filetypes": ["sql", "mysql"]
      }
    }
}

